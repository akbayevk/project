
<div>
  <% if flash[:alert] %>
      <p><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
      <fieldset>
        <legend>LOG IN</legend>
        <table>
          <tr>
            <td><label>name:</label></td>
            <td><%= text_field_tag :name, params[:name] %></td>
          </tr>
          <tr>
            <td><label>password:</label></td>
            <td><%= password_field_tag :password, params[:password] %></td>
          </tr>

          <tr>
            <td colspan="2"><%= submit_tag "login" %></td>
          </tr>
        </table>
      </fieldset>
  <% end %>
</div>
