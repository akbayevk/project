
<%= simple_form_for @character, :html => { :class => 'form-horizontal' } do |f| %>
<div class="field">
    <%= f.input :name %>
    <%= f.input :address %>
  
   <h2>Event Details</h2>
    <ol class="event_details-container">
      <%= f.nested_fields_for :event_details, render_template: false, new_item_index: 'new_event_detail_item' do |f| %>
        <%= render 'event_fields', f: f %>
      <% end %>
    </ol>
    <%= nested_fields_templates %>
    
  
  
</div>  

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                characters_path, :class => 'btn' %>
  </div>
<% end %>
