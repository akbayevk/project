
 <li class="event_detail">
  <%= f.label :title, "Title" %> <br/>

  <%= f.text_field :title%><br/>
  <%= f.label :description, "Description" %><br/>
  <%= f.text_area :description %><br/>
  <%= f.label :from, "From" %><br/>
  <%= f.date_select :from, :class => 'date_select' %><br/>
  <%= f.label :to, "To" %><br/>
  <%= f.date_select :to, :class => 'date_select' %>
  <h3>Pictures</h3>
  <div class="nested-level-2">
    <ul class="pictures-container">
      <%= f.nested_fields_for :pictures, new_item_index: 'new_picture_item', html: { class: "picture-form" } do |f| %>
        <li class="picture">
          <%= f.label :url %>
          
          <%= f.text_field :url %>

          <a href="#" class="picture-remove">remove</a>

          <%= f.hidden_field :id %>
          <%= f.hidden_field :_destroy %>
        </li>
      <% end %>
    </ul>
    <a href="#" class="picture-add">Add Resource</a>
  </div>
  <a href="#" class="task-remove">remove</a>

  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy %>
</li>
