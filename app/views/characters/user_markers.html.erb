<%- model_class = Character.new.class -%>
<div class="row">
  
  <div class="span9">
<%= form_tag user_markers_path, :method => 'get', :class => 'navbar-search pull-left' do %>
 
   
    <%= text_field_tag :search, params[:search], :class => 'span4', :placeholder => 'Search' %>
 
<% end %>
<P style="text-align: right">
<%= link_to t('.new', :default => t("helpers.links.create_new")),
            new_character_path,
            :class => 'btn btn-large btn-success'  %></p>

    <table class="table table-striped">
  <thead>
    <tr>
    
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th>Actions</th>
      
      
    </tr>
  </thead>
  <tbody>
    <% @characters.each do |character| %>
      <tr>
   
        <td><%= character.name %></td>
        <td><%= character.address %></td>
       
        
       
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
          character_path(character), :class => 'btn btn-mini btn-info'
          %>
          
          
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_character_path(character), :class => 'btn btn-mini' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              character_path(character),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      
    <% end %>
      
        
      
  </tbody>
</table>
  </div>
</div>

    
 


    
    
    <% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">&#215;</a>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  </div>
<% end %>
    