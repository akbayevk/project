

<%= form_for @event_detail, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="field">
    
    
        <%= f.hidden_field :character_id %>
    
    <div class="control-group">
      <%= f.label :title, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :title, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :class => 'input-xlarge', :rows => '5' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :from, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :from, :class => 'date_select' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :to, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :to, :class => 'date_select' %>
      </div>
    </div>
  </div>
<h3>pictures</h3>
  <%= f.fields_for :pictures do |builder| %>
    <%= render 'picture_fields', f: builder %>
    
  <% end %>
<%= link_to_add_fields "Add Pictures", f, :pictures %>

<h3>videos</h3>
<%= f.fields_for :videos do |builder| %>
    <%= render 'video_fields', f: builder %>
    
  <% end %>
<%= link_to_add_fields "Add Videos", f, :videos %>

<h3>blogs</h3>
<%= f.fields_for :blogs do |builder| %>
    <%= render 'blog_fields', f: builder %>
    
  <% end %>
<%= link_to_add_fields "Add Blogs", f, :blogs %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
      event_details_path, :class => 'btn' %>
  </div>
<% end %>
